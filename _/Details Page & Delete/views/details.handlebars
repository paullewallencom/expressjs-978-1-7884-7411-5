<h1>Store Details [{{store.id}}]</h1>
<p>Address: {{store.address}}</p>
<form id="delete-form" method="post" action="/store/delete/{{store.id}}?_method=DELETE">
  <input type="submit" value="Delete Store">
</form>
<div id="map"></div>


