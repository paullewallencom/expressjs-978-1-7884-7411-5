<script>
  function initMap(){
    const lat = {{store.lat}};
    const lng = {{store.lng}};
    const myLatLng = {lat:lat, lng:lng};

    const map = new google.maps.Map(document.getElementById('map'), {
      zoom: 10,
      center:myLatLng
    });

    const marker = new google.maps.Marker({
      position: myLatLng,
      map: map
    });

  }
</script>
